export interface Fighter {
  id: number
  name: string
  nickname: string
  age: number
  country: string
  weightClass: string
  record: string
  wins: number
  losses: number
  draws: number
  height: string
  reach: string
  stance: string
  status: 'champion' | 'top5' | 'top15' | 'rising'
  image: string
  debut: string
  team: string
}

export interface Fight {
  id: number
  fighter1Id: number
  fighter2Id: number
  fighter1Name: string
  fighter2Name: string
  event: string
  date: string
  result: 'win' | 'loss' | 'draw'
  method: 'KO/TKO' | 'Submission' | 'Decision' | 'Draw'
  round: number
  time: string
  bonus?: string
}
