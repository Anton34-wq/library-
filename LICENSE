          <div className="flex items-center space-x-2 mb-8">
            <Award className="w-6 h-6 text-yellow-500" />
            <h2 className="text-2xl font-bold text-gray-900 dark:text-white">–î–µ–π—Å—Ç–≤—É—é—â–∏–µ —á–µ–º–ø–∏–æ–Ω—ã</h2>
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {champions.slice(0, 4).map((fighter) => (
              <FighterCard key={fighter.id} fighter={fighter} />
            ))}
          </div>
        </div>
      </div>

      {/* –í–æ—Å—Ö–æ–¥—è—â–∏–µ –∑–≤–µ–∑–¥—ã */}
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div className="flex items-center space-x-2 mb-8">
          <TrendingUp className="w-6 h-6 text-green-600" />
          <h2 className="text-2xl font-bold text-gray-900 dark:text-white">–í–æ—Å—Ö–æ–¥—è—â–∏–µ –∑–≤–µ–∑–¥—ã</h2>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {rising.map((fighter) => (
            <FighterCard key={fighter.id} fighter={fighter} />
          ))}
        </div>
