'use client'

import { useState } from 'react'
import { fighters } from '@/data/fighters'
import FighterCard from '@/components/Fighters/FighterCard'
import FighterFilters from '@/components/Fighters/FighterFilters'
import { Grid, Rows } from 'lucide-react'

export default function FightersPage() {
  const [filteredFighters, setFilteredFighters] = useState(fighters)
  const [view, setView] = useState<'grid' | 'list'>('grid')

  const handleFilterChange = (filters: any) => {
    let filtered = [...fighters]

    if (filters.search) {
      const searchLower = filters.search.toLowerCase()
      filtered = filtered.filter(f => 
        f.name.toLowerCase().includes(searchLower) ||
        f.nickname.toLowerCase().includes(searchLower)
      )
    }

    if (filters.weightClass) {
      filtered = filtered.filter(f => f.weightClass === filters.weightClass)
    }

    if (filters.status) {
      filtered = filtered.filter(f => f.status === filters.status)
    }

    if (filters.country) {
      filtered = filtered.filter(f => f.country === filters.country)
    }

    setFilteredFighters(filtered)
  }

  return (
    <div className="min-h-screen bg-gray-50 dark:bg-gray-900 pt-16">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* –ó–∞–≥–æ–ª–æ–≤–æ–∫ */}
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-gray-900 dark:text-white mb-2">
            –ë–æ–π—Ü—ã UFC
          </h1>
          <p className="text-gray-600 dark:text-gray-400">
            –ù–∞–π–¥–µ–Ω–æ {filteredFighters.length} –±–æ–π—Ü–æ–≤
          </p>
        </div>

        {/* –§–∏–ª—å—Ç—Ä—ã */}
        <FighterFilters onFilterChange={handleFilterChange} />

        {/* –í–∏–¥ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è */}
        <div className="flex justify-end mb-6">
          <div className="flex items-center space-x-2 bg-white dark:bg-gray-800 rounded-lg p-1">
            <button
              onClick={() => setView('grid')}
              className={`p-2 rounded ${
                view === 'grid'
                  ? 'bg-red-600 text-white'
                  : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
              }`}
            >
              <Grid className="w-5 h-5" />
            </button>
            <button
              onClick={() => setView('list')}
              className={`p-2 rounded ${
                view === 'list'
                  ? 'bg-red-600 text-white'
                  : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
              }`}
            >
              <Rows className="w-5 h-5" />
            </button>
          </div>
        </div>

        {/* –°–µ—Ç–∫–∞ –±–æ–π—Ü–æ–≤ */}
        {filteredFighters.length > 0 ? (
          <div className={
            view === 'grid'
              ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6'
              : 'space-y-4'
          }>
            {filteredFighters.map((fighter) => (
              <FighterCard key={fighter.id} fighter={fighter} />
            ))}
          </div>
        ) : (
          <div className="text-center py-12">
            <p className="text-xl text-gray-500 dark:text-gray-400">
              –ë–æ–π—Ü—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã
            </p>
          </div>
        )}
      </div>
    </div>
  )
}
'use client'

import { useState, useEffect } from 'react'
import { useParams } from 'next/navigation'
import { fighters } from '@/data/fighters'
import { fights } from '@/data/fights'
import { Fighter, Fight } from '@/types'
import { Heart, Calendar, Flag, Ruler, Target, Award, Trophy, TrendingUp, Activity } from 'lucide-react'
import Link from 'next/link'

export default function FighterPage() {
  const { id } = useParams()
  const [fighter, setFighter] = useState<Fighter | null>(null)
  const [fighterFights, setFighterFights] = useState<Fight[]>([])
  const [isFavorite, setIsFavorite] = useState(false)

  useEffect(() => {
    const fighterId = Number(id)
    const found = fighters.find(f => f.id === fighterId)
    setFighter(found || null)
    
    if (found) {
      const ffs = fights.filter(f => f.fighter1Id === fighterId || f.fighter2Id === fighterId)
      setFighterFights(ffs)
    }

    const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')
    setIsFavorite(favorites.includes(fighterId))
  }, [id])

  const toggleFavorite = () => {
    if (!fighter) return
    
    const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')
    let newFavorites
    
    if (favorites.includes(fighter.id)) {
      newFavorites = favorites.filter((fid: number) => fid !== fighter.id)
    } else {
      newFavorites = [...favorites, fighter.id]
    }
    
    localStorage.setItem('favorites', JSON.stringify(newFavorites))
    setIsFavorite(!isFavorite)
    window.dispatchEvent(new Event('favoritesUpdated'))
  }

  if (!fighter) {
    return (
      <div className="min-h-screen bg-gray-50 dark:bg-gray-900 pt-16 flex items-center justify-center">
        <div className="text-center">
          <div className="text-6xl mb-4">ü•ã</div>
          <h1 className="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            –ë–æ–µ—Ü –Ω–µ –Ω–∞–π–¥–µ–Ω
          </h1>
          <Link href="/fighters" className="text-red-600 hover:text-red-700">
            –í–µ—Ä–Ω—É—Ç—å—Å—è –∫ —Å–ø–∏—Å–∫—É
          </Link>
        </div>
      </div>
    )
  }

  const getMethodColor = (method: string) => {
    switch (method) {
      case 'KO/TKO': return 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
      case 'Submission': return 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
      case 'Decision': return 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
      default: return 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200'
    }
  }

  return (
    <div className="min-h-screen bg-gray-50 dark:bg-gray-900 pt-16">
      {/* –ì–µ—Ä–æ–π-—Å–µ–∫—Ü–∏—è —Å —Ñ–æ–Ω–æ–º */}
      <div className="relative bg-gradient-to-r from-red-900 to-red-700 text-white py-16">
        <div className="absolute inset-0 bg-black opacity-50"></div>
        <div className="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
            {/* –§–æ—Ç–æ */}
            <div className="w-48 h-48 bg-white/10 rounded-full flex items-center justify-center text-7xl">
              ü•ã
            </div>
            
            {/* –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è */}
            <div className="flex-1 text-center md:text-left">
              <div className="flex items-center justify-center md:justify-between mb-4">
                <div>
                  <h1 className="text-4xl md:text-5xl font-bold mb-2">{fighter.name}</h1>
                  <p className="text-2xl opacity-90">"{fighter.nickname}"</p>
                </div>
                <button
                  onClick={toggleFavorite}
                  className="hidden md:block p-3 bg-white/10 rounded-full hover:bg-white/20 transition-colors"
                >
                  <Heart className={`w-6 h-6 ${isFavorite ? 'fill-white' : ''}`} />
                </button>
              </div>
              
              <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                <div className="bg-white/10 rounded-lg p-3">
                  <div className="text-sm opacity-75">–†–µ–∫–æ—Ä–¥</div>
                  <div className="text-2xl font-bold">{fighter.record}</div>
                </div>
                <div className="bg-white/10 rounded-lg p-3">
                  <div className="text-sm opacity-75">–í–æ–∑—Ä–∞—Å—Ç</div>
                  <div className="text-2xl font-bold">{fighter.age}</div>
                </div>
                <div className="bg-white/10 rounded-lg p-3">
                  <div className="text-sm opacity-75">–í–µ—Å–æ–≤–∞—è</div>
                  <div className="text-2xl font-bold">{fighter.weightClass}</div>
                </div>
                <div className="bg-white/10 rounded-lg p-3">
                  <div className="text-sm opacity-75">–î–µ–±—é—Ç</div>
                  <div className="text-2xl font-bold">{fighter.debut}</div>
                </div>
              </div>
              
              <div className="flex items-center justify-center md:justify-start space-x-4">
                <span className="px-4 py-2 bg-white/10 rounded-full text-sm">
                  {fighter.country}
                </span>
                <span className="px-4 py-2 bg-white/10 rounded-full text-sm">
                  {fighter.team}
                </span>
                <span className="px-4 py-2 bg-white/10 rounded-full text-sm">
                  {fighter.stance}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* –û—Å–Ω–æ–≤–Ω–æ–π –∫–æ–Ω—Ç–µ–Ω—Ç */}
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* –õ–µ–≤–∞—è –∫–æ–ª–æ–Ω–∫–∞ - —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ */}
          <div className="lg:col-span-1 space-y-6">
            {/* –§–∏–∑–∏—á–µ—Å–∫–∏–µ –¥–∞–Ω–Ω—ã–µ */}
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
              <h2 className="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                <Activity className="w-5 h-5 mr-2 text-red-600" />
                –§–∏–∑–∏—á–µ—Å–∫–∏–µ –¥–∞–Ω–Ω—ã–µ
              </h2>
              <div className="space-y-4">
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–†–æ—Å—Ç</span>
                  <span className="font-bold text-gray-900 dark:text-white">{fighter.height}</span>
                </div>
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–†–∞–∑–º–∞—Ö —Ä—É–∫</span>
                  <span className="font-bold text-gray-900 dark:text-white">{fighter.reach}</span>
                </div>
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–°—Ç–æ–π–∫–∞</span>
                  <span className="font-bold text-gray-900 dark:text-white">{fighter.stance}</span>
                </div>
              </div>
            </div>

            {/* –ö–∞—Ä—å–µ—Ä–∞ */}
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
              <h2 className="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                <Trophy className="w-5 h-5 mr-2 text-red-600" />
                –ö–∞—Ä—å–µ—Ä–∞
              </h2>
              <div className="space-y-4">
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–î–µ–±—é—Ç –≤ UFC</span>
                  <span className="font-bold text-gray-900 dark:text-white">{fighter.debut}</span>
                </div>
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–ö–æ–º–∞–Ω–¥–∞</span>
                  <span className="font-bold text-gray-900 dark:text-white">{fighter.team}</span>
                </div>
                <div className="flex justify-between items-center">
                  <span className="text-gray-600 dark:text-gray-400">–í—Å–µ–≥–æ –±–æ—ë–≤</span>
                  <span className="font-bold text-gray-900 dark:text-white">
                    {fighter.wins + fighter.losses + fighter.draws}
                  </span>
                </div>
              </div>
            </div>

            {/* –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ–±–µ–¥ */}
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
              <h2 className="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                <TrendingUp className="w-5 h-5 mr-2 text-red-600" />
                –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ–±–µ–¥
              </h2>
              <div className="space-y-4">
                <div>
                  <div className="flex justify-between mb-1">
                    <span className="text-gray-600 dark:text-gray-400">–ü–æ–±–µ–¥—ã</span>
                    <span className="font-bold text-green-600">{fighter.wins}</span>
                  </div>
                  <div className="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                    <div className="bg-green-600 h-2.5 rounded-full" style={{ width: `${(fighter.wins / (fighter.wins + fighter.losses)) * 100}%` }}></div>
                  </div>
                </div>
                <div>
                  <div className="flex justify-between mb-1">
                    <span className="text-gray-600 dark:text-gray-400">–ü–æ—Ä–∞–∂–µ–Ω–∏—è</span>
                    <span className="font-bold text-red-600">{fighter.losses}</span>
                  </div>
                  <div className="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                    <div className="bg-red-600 h-2.5 rounded-full" style={{ width: `${(fighter.losses / (fighter.wins + fighter.losses)) * 100}%` }}></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* –ü—Ä–∞–≤–∞—è –∫–æ–ª–æ–Ω–∫–∞ - –∏—Å—Ç–æ—Ä–∏—è –±–æ—ë–≤ */}
          <div className="lg:col-span-2">
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
              <h2 className="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
                <Calendar className="w-5 h-5 mr-2 text-red-600" />
                –ò—Å—Ç–æ—Ä–∏—è –±–æ—ë–≤
              </h2>
              
              <div className="space-y-4">
                {fighterFights.map((fight) => {
                  const isWinner = 
                    (fight.fighter1Id === fighter.id && fight.result === 'win') ||
                    (fight.fighter2Id === fighter.id && fight.result === 'loss')
                  
                  const opponentName = fight.fighter1Id === fighter.id 
                    ? fight.fighter2Name 
                    : fight.fighter1Name

                  return (
                    <div key={fight.id} className="border-b border-gray-200 dark:border-gray-700 last:border-0 pb-4 last:pb-0">
                      <div className="flex items-center justify-between mb-2">
                        <span className="text-sm text-gray-500">{fight.event}</span>
                        <span className="text-sm text-gray-500">{fight.date}</span>
                      </div>
                      <div className="flex items-center justify-between">
                        <div className="flex items-center space-x-4">
                          <span className={`px-3 py-1 rounded-full text-xs font-bold ${
                            isWinner ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                          }`}>
                            {isWinner ? '–ü–û–ë–ï–î–ê' : '–ü–û–†–ê–ñ–ï–ù–ò–ï'}
                          </span>
                          <span className="font-medium text-gray-900 dark:text-white">
                            vs {opponentName}
                          </span>
                        </div>
                        <div className="flex items-center space-x-2">
                          <span className={`px-2 py-1 rounded text-xs ${getMethodColor(fight.method)}`}>
                            {fight.method}
                          </span>
                          <span className="text-sm text-gray-600 dark:text-gray-400">
                            {fight.round} —Ä–∞—É–Ω–¥, {fight.time}
                          </span>
                        </div>
                      </div>
                      {fight.bonus && (
                        <div className="mt-2">
                          <span className="inline-flex items-center px-2 py-1 bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200 rounded text-xs">
                            <Award className="w-3 h-3 mr-1" />
                            {fight.bonus}
                          </span>
                        </div>
                      )}
                    </div>
                  )
                })}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}
'use client'

import { useState, useEffect } from 'react'
import { fighters } from '@/data/fighters'
import FighterCard from '@/components/Fighters/FighterCard'
import { Heart } from 'lucide-react'
import Link from 'next/link'

export default function FavoritesPage() {
  const [favoriteFighters, setFavoriteFighters] = useState<any[]>([])

  useEffect(() => {
    const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')
    const favFighters = fighters.filter(f => favorites.includes(f.id))
    setFavoriteFighters(favFighters)

    const handleFavoritesUpdate = () => {
      const updated = JSON.parse(localStorage.getItem('favorites') || '[]')
      const updatedFighters = fighters.filter(f => updated.includes(f.id))
      setFavoriteFighters(updatedFighters)
    }

    window.addEventListener('favoritesUpdated', handleFavoritesUpdate)
    return () => window.removeEventListener('favoritesUpdated', handleFavoritesUpdate)
  }, [])

  return (
    <div className="min-h-screen bg-gray-50 dark:bg-gray-900 pt-16">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {/* –ó–∞–≥–æ–ª–æ–≤–æ–∫ */}
        <div className="flex items-center space-x-3 mb-8">
          <Heart className="w-8 h-8 text-red-600 fill-current" />
          <h1 className="text-3xl font-bold text-gray-900 dark:text-white">
            –ò–∑–±—Ä–∞–Ω–Ω—ã–µ –±–æ–π—Ü—ã
          </h1>
        </div>

        {favoriteFighters.length > 0 ? (
          <>
            <p className="text-gray-600 dark:text-gray-400 mb-6">
              –í—ã –¥–æ–±–∞–≤–∏–ª–∏ {favoriteFighters.length} –±–æ–π—Ü–æ–≤ –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–µ
            </p>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {favoriteFighters.map((fighter) => (
                <FighterCard key={fighter.id} fighter={fighter} />
              ))}
            </div>
          </>
        ) : (
          <div className="text-center py-16 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
            <div className="text-7xl mb-4">‚ù§Ô∏è</div>
            <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-4">
              –£ –≤–∞—Å –Ω–µ—Ç –∏–∑–±—Ä–∞–Ω–Ω—ã—Ö –±–æ–π—Ü–æ–≤
            </h2>
            <p className="text-gray-600 dark:text-gray-400 mb-8">
              –î–æ–±–∞–≤–ª—è–π—Ç–µ –±–æ–π—Ü–æ–≤ –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–µ, —á—Ç–æ–±—ã —Å–ª–µ–¥–∏—Ç—å –∑–∞ –∏—Ö –∫–∞—Ä—å–µ—Ä–æ–π
            </p>
            <Link
              href="/fighters"
              className="inline-flex px-6 py-3 bg-red-600 text-white rounded-lg font-bold hover:bg-red-700 transition-colors"
            >
              –ü–µ—Ä–µ–π—Ç–∏ –∫ —Å–ø–∏—Å–∫—É –±–æ–π—Ü–æ–≤
            </Link>
          </div>
        )}
      </div>
    </div>
  )
}
'use client'

import { ThemeProvider } from 'next-themes'

export function Providers({ children }: { children: React.ReactNode }) {
  return (
    <ThemeProvider attribute="class" defaultTheme="system" enableSystem>
      {children}
    </ThemeProvider>
  )
}
import type { Metadata } from 'next'
import { Inter } from 'next/font/google'
import './globals.css'
import { Providers } from './providers'
import Header from '@/components/Layout/Header'

const inter = Inter({ subsets: ['latin', 'cyrillic'] })

export const metadata: Metadata = {
  title: 'UFC Fighters - –≠–Ω—Ü–∏–∫–ª–æ–ø–µ–¥–∏—è –±–æ–π—Ü–æ–≤',
  description: '–ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –±–æ–π—Ü–æ–≤ UFC: —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞, –∏—Å—Ç–æ—Ä–∏—è –±–æ—ë–≤, —Ä–µ–π—Ç–∏–Ω–≥–∏',
}

export default function RootLayout({
  children,
}: {
  children: React.ReactNode
}) {
  return (
    <html lang="ru" suppressHydrationWarning>
      <body className={inter.className}>
        <Providers>
          <Header />
          <main>{children}</main>
        </Providers>
      </body>
    </html>
  )
}
