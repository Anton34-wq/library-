'use client'

import Link from 'next/link'
import { useState, useEffect } from 'react'
import { useTheme } from 'next-themes'
import { Menu, X, Sun, Moon, Heart } from 'lucide-react'

export default function Header() {
  const [isOpen, setIsOpen] = useState(false)
  const [mounted, setMounted] = useState(false)
  const { theme, setTheme } = useTheme()
  const [favoritesCount, setFavoritesCount] = useState(0)

  useEffect(() => {
    setMounted(true)
    const updateFavoritesCount = () => {
      const favs = JSON.parse(localStorage.getItem('favorites') || '[]')
      setFavoritesCount(favs.length)
    }
    updateFavoritesCount()
    window.addEventListener('favoritesUpdated', updateFavoritesCount)
    return () => window.removeEventListener('favoritesUpdated', updateFavoritesCount)
  }, [])

  if (!mounted) return null

  const navItems = [
    { name: '–ì–ª–∞–≤–Ω–∞—è', href: '/' },
    { name: '–ë–æ–π—Ü—ã', href: '/fighters' },
    { name: '–†–µ–π—Ç–∏–Ω–≥–∏', href: '/rankings' },
    { name: '–°—Ä–∞–≤–Ω–µ–Ω–∏–µ', href: '/compare' }
  ]

  return (
    <header className="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between items-center h-16">
          {/* –õ–æ–≥–æ—Ç–∏–ø */}
          <Link href="/" className="flex items-center space-x-2">
            <span className="text-2xl font-bold bg-gradient-to-r from-red-600 to-red-800 bg-clip-text text-transparent">
              UFC Fighters
            </span>
          </Link>

          {/* –î–µ—Å–∫—Ç–æ–ø –Ω–∞–≤–∏–≥–∞—Ü–∏—è */}
          <nav className="hidden md:flex space-x-8">
            {navItems.map((item) => (
              <Link
                key={item.href}
                href={item.href}
                className="text-gray-700 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-500 transition-colors"
              >
                {item.name}
              </Link>
            ))}
          </nav>

          {/* –ü—Ä–∞–≤–∞—è —á–∞—Å—Ç—å */}
          <div className="flex items-center space-x-4">
            {/* –ò–∑–±—Ä–∞–Ω–Ω–æ–µ */}
            <Link
              href="/favorites"
              className="relative p-2 text-gray-700 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-500"
            >
              <Heart className="w-5 h-5" />
              {favoritesCount > 0 && (
                <span className="absolute -top-1 -right-1 bg-red-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                  {favoritesCount}
                </span>
              )}
            </Link>

            {/* –¢–µ–º–∞ */}
            <button
              onClick={() => setTheme(theme === 'dark' ? 'light' : 'dark')}
              className="p-2 text-gray-700 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-500"
            >
              {theme === 'dark' ? <Sun className="w-5 h-5" /> : <Moon className="w-5 h-5" />}
            </button>

            {/* –ú–æ–±–∏–ª—å–Ω–æ–µ –º–µ–Ω—é –∫–Ω–æ–ø–∫–∞ */}
            <button
              onClick={() => setIsOpen(!isOpen)}
              className="md:hidden p-2 text-gray-700 dark:text-gray-300"
            >
              {isOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}
            </button>
          </div>
        </div>
      </div>

      {/* –ú–æ–±–∏–ª—å–Ω–æ–µ –º–µ–Ω—é */}
      {isOpen && (
        <div className="md:hidden bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
          <div className="px-4 py-2 space-y-1">
            {navItems.map((item) => (
              <Link
                key={item.href}
                href={item.href}
                className="block py-2 text-gray-700 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-500"
                onClick={() => setIsOpen(false)}
              >
                {item.name}
              </Link>
            ))}
          </div>
        </div>
      )}
    </header>
  )
}
'use client'

import { Fighter } from '@/types'
import Link from 'next/link'
import { Heart } from 'lucide-react'
import { useState, useEffect } from 'react'

interface Props {
  fighter: Fighter
}

export default function FighterCard({ fighter }: Props) {
  const [isFavorite, setIsFavorite] = useState(false)

  useEffect(() => {
    const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')
    setIsFavorite(favorites.includes(fighter.id))
  }, [fighter.id])

  const toggleFavorite = (e: React.MouseEvent) => {
    e.preventDefault()
    e.stopPropagation()
    
    const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')
    let newFavorites
    
    if (favorites.includes(fighter.id)) {
      newFavorites = favorites.filter((id: number) => id !== fighter.id)
    } else {
      newFavorites = [...favorites, fighter.id]
    }
    
    localStorage.setItem('favorites', JSON.stringify(newFavorites))
    setIsFavorite(!isFavorite)
    window.dispatchEvent(new Event('favoritesUpdated'))
  }

  const getStatusBadge = () => {
    switch (fighter.status) {
      case 'champion':
        return <span className="px-2 py-1 bg-yellow-500 text-white text-xs font-bold rounded">–ß–ï–ú–ü–ò–û–ù</span>
      case 'top5':
        return <span className="px-2 py-1 bg-red-600 text-white text-xs font-bold rounded">–¢–û–ü-5</span>
      case 'top15':
        return <span className="px-2 py-1 bg-blue-600 text-white text-xs font-bold rounded">–¢–û–ü-15</span>
      case 'rising':
        return <span className="px-2 py-1 bg-green-600 text-white text-xs font-bold rounded">–í–û–°–•–û–î–Ø–©–ò–ô</span>
      default:
        return null
    }
  }

  return (
    <Link href={`/fighter/${fighter.id}`}>
      <div className="group relative bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        {/* –§–æ—Ç–æ */}
        <div className="relative h-64 overflow-hidden bg-gray-200 dark:bg-gray-700">
          <div className="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent" />
          <div className="w-full h-full flex items-center justify-center text-gray-500">
            {/* –ó–∞–≥–ª—É—à–∫–∞ –¥–ª—è —Ñ–æ—Ç–æ */}
            <span className="text-6xl">ü•ã</span>
          </div>
          
          {/* –°—Ç–∞—Ç—É—Å */}
          <div className="absolute top-2 left-2">
            {getStatusBadge()}
          </div>
          
          {/* –ò–∑–±—Ä–∞–Ω–Ω–æ–µ */}
          <button
            onClick={toggleFavorite}
            className="absolute top-2 right-2 p-2 bg-white dark:bg-gray-900 rounded-full shadow-lg hover:scale-110 transition-transform"
          >
            <Heart
              className={`w-5 h-5 ${
                isFavorite ? 'fill-red-600 text-red-600' : 'text-gray-600 dark:text-gray-400'
              }`}
            />
          </button>
          
          {/* –ò–º—è –Ω–∞ —Ñ–æ—Ç–æ */}
          <div className="absolute bottom-0 left-0 right-0 p-4 text-white">
            <h3 className="text-xl font-bold">{fighter.name}</h3>
            <p className="text-sm opacity-90">"{fighter.nickname}"</p>
          </div>
        </div>
        
        {/* –ò–Ω—Ñ–æ */}
        <div className="p-4 space-y-3">
          <div className="flex justify-between items-center">
            <span className="px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded text-sm">
              {fighter.weightClass}
            </span>
            <span className="text-lg font-bold text-red-600">
              {fighter.record}
            </span>
          </div>
          
          <div className="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
            <span>{fighter.country}</span>
            <span>‚Ä¢</span>
            <span>{fighter.age} –ª–µ—Ç</span>
            <span>‚Ä¢</span>
            <span>{fighter.team}</span>
          </div>
          
          <div className="grid grid-cols-3 gap-2 pt-2 border-t border-gray-200 dark:border-gray-700">
            <div className="text-center">
              <div className="text-xs text-gray-500">–†–æ—Å—Ç</div>
              <div className="font-semibold">{fighter.height}</div>
            </div>
            <div className="text-center">
              <div className="text-xs text-gray-500">–†–∞–∑–º–∞—Ö</div>
              <div className="font-semibold">{fighter.reach}</div>
            </div>
            <div className="text-center">
              <div className="text-xs text-gray-500">–°—Ç–æ–π–∫–∞</div>
              <div className="font-semibold">{fighter.stance}</div>
            </div>
          </div>
        </div>
      </div>
    </Link>
  )
}
'use client'

import { useState } from 'react'
import { Search, SlidersHorizontal, X } from 'lucide-react'

interface Props {
  onFilterChange: (filters: any) => void
}

const weightClasses = [
  '–í—Å–µ',
  '–õ–µ–≥–∫–∏–π –≤–µ—Å',
  '–ü–æ–ª—É–ª–µ–≥–∫–∏–π –≤–µ—Å',
  '–¢—è–∂–µ–ª—ã–π –≤–µ—Å',
  '–°—Ä–µ–¥–Ω–∏–π –≤–µ—Å',
  '–ü–æ–ª—É—Å—Ä–µ–¥–Ω–∏–π –≤–µ—Å',
  '–õ–µ–≥—á–∞–π—à–∏–π –≤–µ—Å'
]

const statuses = [
  '–í—Å–µ',
  'champion',
  'top5',
  'top15',
  'rising'
]

const countries = [
  '–í—Å–µ',
  '–†–æ—Å—Å–∏—è',
  '–°–®–ê',
  '–ò—Ä–ª–∞–Ω–¥–∏—è',
  '–ö–∞–º–µ—Ä—É–Ω',
  '–ê–≤—Å—Ç—Ä–∞–ª–∏—è',
  '–ù–æ–≤–∞—è –ó–µ–ª–∞–Ω–¥–∏—è',
  '–û–ê–≠',
  '–ö–∞–∑–∞—Ö—Å—Ç–∞–Ω',
  '–ì—Ä—É–∑–∏—è'
]

export default function FighterFilters({ onFilterChange }: Props) {
  const [isOpen, setIsOpen] = useState(false)
  const [search, setSearch] = useState('')
  const [weightClass, setWeightClass] = useState('–í—Å–µ')
  const [status, setStatus] = useState('–í—Å–µ')
  const [country, setCountry] = useState('–í—Å–µ')

  const applyFilters = () => {
    onFilterChange({
      search,
      weightClass: weightClass === '–í—Å–µ' ? '' : weightClass,
      status: status === '–í—Å–µ' ? '' : status,
      country: country === '–í—Å–µ' ? '' : country
    })
  }

  const clearFilters = () => {
    setSearch('')
    setWeightClass('–í—Å–µ')
    setStatus('–í—Å–µ')
    setCountry('–í—Å–µ')
    onFilterChange({
      search: '',
      weightClass: '',
      status: '',
      country: ''
    })
  }

  return (
    <div className="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 mb-8">
      {/* –ü–æ–∏—Å–∫ */}
      <div className="relative mb-4">
        <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" />
        <input
          type="text"
          placeholder="–ü–æ–∏—Å–∫ –ø–æ –∏–º–µ–Ω–∏ –∏–ª–∏ –ø—Ä–æ–∑–≤–∏—â—É..."
          value={search}
          onChange={(e) => setSearch(e.target.value)}
          onKeyUp={(e) => e.key === 'Enter' && applyFilters()}
          className="w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-red-500 focus:border-transparent"
        />
      </div>

      {/* –ö–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è */}
      <div className="flex items-center justify-between">
        <button
          onClick={() => setIsOpen(!isOpen)}
          className="flex items-center space-x-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
        >
          <SlidersHorizontal className="w-4 h-4" />
          <span>–§–∏–ª—å—Ç—Ä—ã</span>
        </button>
        
        <div className="flex space-x-2">
          <button
            onClick={applyFilters}
            className="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors"
          >
            –ü—Ä–∏–º–µ–Ω–∏—Ç—å
          </button>
          <button
            onClick={clearFilters}
            className="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          >
            <X className="w-4 h-4" />
          </button>
        </div>
      </div>

      {/* –§–∏–ª—å—Ç—Ä—ã */}
      {isOpen && (
        <div className="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            {/* –í–µ—Å–æ–≤–∞—è –∫–∞—Ç–µ–≥–æ—Ä–∏—è */}
            <div>
              <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                –í–µ—Å–æ–≤–∞—è –∫–∞—Ç–µ–≥–æ—Ä–∏—è
              </label>
              <select
                value={weightClass}
                onChange={(e) => setWeightClass(e.target.value)}
                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
              >
                {weightClasses.map((wc) => (
                  <option key={wc} value={wc}>{wc}</option>
                ))}
              </select>
            </div>

            {/* –°—Ç–∞—Ç—É—Å */}
            <div>
              <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                –°—Ç–∞—Ç—É—Å
              </label>
              <select
                value={status}
                onChange={(e) => setStatus(e.target.value)}
                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
              >
                {statuses.map((s) => (
                  <option key={s} value={s}>
                    {s === '–í—Å–µ' ? '–í—Å–µ' : 
                     s === 'champion' ? '–ß–µ–º–ø–∏–æ–Ω—ã' :
                     s === 'top5' ? '–¢–æ–ø-5' :
                     s === 'top15' ? '–¢–æ–ø-15' : '–í–æ—Å—Ö–æ–¥—è—â–∏–µ'}
                  </option>
                ))}
              </select>
            </div>

            {/* –°—Ç—Ä–∞–Ω–∞ */}
            <div>
              <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                –°—Ç—Ä–∞–Ω–∞
              </label>
              <select
                value={country}
                onChange={(e) => setCountry(e.target.value)}
                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
              >
                {countries.map((c) => (
                  <option key={c} value={c}>{c}</option>
                ))}
              </select>
            </div>
          </div>
        </div>
      )}
    </div>
  )
}
